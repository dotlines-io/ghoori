{
    "name": "dotlines-io/ghoori",
    "description": "This is the core package for Ghoori Payment integration. Both for OnDemand and Subscription Payment Integration",
    "keywords": [
        "dotlines-io",
        "ghoori"
    ],
    "homepage": "https://github.com/dotlines-io/ghoori",
    "license": "MIT",
    "authors": [
        {
            "name": "TareqMahbub",
            "email": "tareqmahbub@ssd-tech.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "dotlines-io/core": "~1.0.3",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Dotlines\\Ghoori\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dotlines\\Ghoori\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
